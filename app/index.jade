    link(rel='stylesheet', href='styles/index.css')
    script(src='bower_components/jquery/jquery.js')
    script(src='bower_components/angular/angular.min.js')
    script(src='scripts/index.js')
  body(ng-controller="BookCtrl") 
    .header
      .container
        .howami(ng-click="edit()")
          span {{name}}
          span(ng-show="name") &nbsp;的
          span 學習地圖
        .share
          a(target="_blank",href="http://www.facebook.com/sharer/sharer.php?u={{share_link}}",ng-click="share()")
            img(src="./images/share.png",border="0")
        .input(ng-show="editName")
            form(ng-submit="enter()")
              p 你是？
              input(placeholder="name",ng-model="name")
              button(type="submit") ＧＯ！
        .tip 勾選你的學習地圖「推推，推已入手好書」「想想，想買回家私藏」
        .note
          .push 推推
          .want 想想
    .main
      .container(ng-hide="editName")
        section
          article#innovation
            .subject INNOVATION
            .wrap
              .book(ng-repeat="book in books | filter:{group:'INNOVATION'}",class="{{book.name | filename}}",ng-class="{'status-push':book.is_push, 'status-want':book.is_want}",style="background-image: url('images/{{book.name | filename}}.jpg')")
                .want(ng-click="want(book)")
                .push(ng-click="push(book)")
          article#information
            .subject INFORMATION DESIGN
            .wrap
              .book(ng-repeat="book in books | filter:{group:'INFORMATION DESIGN'}",class="{{book.name | filename}}",ng-class="{'status-push':book.is_push, 'status-want':book.is_want}",style="background-image: url('images/{{book.name | filename}}.jpg')")
                .want(ng-click="want(book)")
                .push(ng-click="push(book)")
          article#ux
            .subject UX
            .left1.line-bottom
            .center1top.line-top
            .center1bottom.line-bottom
            .center2top.line-top
            .center2bottom.line-bottom
            .right1.line-bottom
            .right2.line-top
            .main
              .book(ng-repeat="book in books | filter:{group:'UX'}",class="{{book.name | filename}}",ng-class="{'status-push':book.is_push, 'status-want':book.is_want}",style="background-image: url('images/{{book.name | filename}}.jpg')")
                .want(ng-click="want(book)")
                .push(ng-click="push(book)")
          article#interaction
            .subject INTERACTION DESIGN
            .left1.line-bottom
            .right1.line-bottom
            .main
              .book(ng-repeat="book in books | filter:{group:'INTERACTION DESIGN'}",class="{{book.name | filename}}",ng-class="{'status-push':book.is_push, 'status-want':book.is_want}",style="background-image: url('images/{{book.name | filename}}.jpg')")
                .want(ng-click="want(book)")
                .push(ng-click="push(book)")
    .footer
      .container
        img.logo(src="./images/logo.png",border="0")