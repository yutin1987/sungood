    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')
    meta(property="og:image",content="http://yutin1987.github.io/sungood/images/facebook_logo.png")
    meta(property="og:title",content="學習地圖 by 桑格設計書店")
    meta(property="og:description",content="勾選你的學習地圖「推推，推已入手好書」「想想，想買回家私藏」")
    //if lt IE 9
      script(src='bower_components/es5-shim/es5-shim.js')
      script(src='bower_components/json3/lib/json3.min.js')
    script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
